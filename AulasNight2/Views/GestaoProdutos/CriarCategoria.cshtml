@model CategoriaModel
@{
    ViewData["Title"] = "Criar Categoria";
}

<div class="text-center">
    <h1 class="display-4">Criar Categoria</h1>
</div>
<br />

<form asp-controller="GestaoProdutos" asp-action="CriarCategoria" method="post">

    <div class="form-group">
        <label for="Nome">Categoria</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o nome da categoria">
    </div>
   

    <br />
    <button type="submit" class="btn btn-secondary">Guardar</button>
    <a class="btn btn-primary" asp-controller="GestaoProdutos" asp-action="Categorias" role="button">Voltar</a>

</form>