@model FornecedorModel

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="text-center">
    <h1 class="display-4">Editar Fornecedor</h1>
</div>
<br />


<form asp-controller="GestaoProdutos" asp-route-id="@Model.Id" asp-action="AlterarFornecedor" method="post">

    <div class="form-group">
        <label for="nome">Fornecedor</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o nome do fornecedor">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nipc">NIPC</label>
        <input type="number" asp-for="NIPC" class="form-control" placeholder="Insira o NIPC do fornecedor">
        @Html.ValidationMessageFor(x => x.NIPC)
    </div>
    <div class="form-group">
        <label for="morada">Morada</label>
        <input type="text" asp-for="Morada" class="form-control" placeholder="Insira a morada do fornecedor">
        @Html.ValidationMessageFor(x => x.Morada)
    </div>
    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="tel" asp-for="Telefone" class="form-control" placeholder="Insira o telefone do fornecedor">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Insira o E-mail do fornecedor">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />

    <br />
    <button type="submit" class="btn btn-secondary">Alterar</button>
    <a class="btn btn-primary" asp-controller="GestaoProdutos" asp-action="Fornecedores" role="button">Voltar</a>

</form>