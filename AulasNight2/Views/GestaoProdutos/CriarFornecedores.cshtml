@model FornecedorModel


@{
    ViewData["Title"] = "Criar Fornecedores";
}

<div class="text-center">
    <h1 class="display-4">Criar Fornecedores</h1>
</div>
<br />

<form asp-controller="GestaoProdutos" asp-action="CriarFornecedores" method="post">
    <div class="form-group">
        <label for="nome">Fornecedor</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o nome do fornecedor">
    </div>
    <div class="form-group">
        <label for="nipc">NIPC</label>
        <input type="text" asp-for="NIPC" class="form-control" placeholder="Insira o NIPC do fornecedor">
    </div>
    <div class="form-group">
        <label for="morada">Morada</label>
        <input type="text" asp-for="Morada" class="form-control" placeholder="Insira a morada do fornecedor">
    </div>
    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Insira o telefone do fornecedor">
    </div>
    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Insira o E-mail do fornecedor">
    </div>
    <br />

    <button type="submit" class="btn btn-secondary">Guardar</button>
    <a class="btn btn-primary" asp-controller="GestaoProdutos" asp-action="Fornecedores" role="button">Voltar</a>

</form>