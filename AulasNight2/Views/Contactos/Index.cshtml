@{
    ViewData["Title"] = "Contacto";
}

<div class="text-left">
   
    <div class="container mt-5">
        <h2 class="text-center">Formulário de Contacto</h2>
        <form>
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" placeholder="Digite o seu nome">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" placeholder="Digite o seu email">
            </div>
            <div class="form-group">
                <label for="mensagem">Mensagem:</label>
                <textarea class="form-control" id="mensagem" rows="5" placeholder="Digite a sua mensagem"></textarea>
            </div>
            <br />
            <button  type="submit" class="btn btn-primary">Submeter</button>
        </form>
    </div>
      
</div>